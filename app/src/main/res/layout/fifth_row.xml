<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">
    <LinearLayout
            android:layout_width="88dp"
            android:layout_height="80dp"

            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="3.5dp" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/imageView5" android:gravity="center">
        <ImageView
                android:layout_gravity="center"
                android:layout_width="69dp"
                android:layout_height="50dp"
                android:background="@drawable/img_test"
                android:foregroundGravity="center"/>


    </LinearLayout>

    <TextView
            android:layout_height="21dp"
            android:layout_width="52dp"
            style="@style/WhiteCobalt"
            android:text="Temur"
            android:id="@+id/textView21" app:layout_constraintStart_toEndOf="@+id/imageView5"
            android:layout_marginStart="3.5dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_height="19dp"
            style="@style/Tariff"
            android:text="Raiting:"
            android:layout_width="48dp"
            android:id="@+id/textView22" app:layout_constraintStart_toStartOf="@+id/textView21"
            android:layout_marginTop="13dp" app:layout_constraintTop_toBottomOf="@+id/textView21"/>
    <TextView
            android:gravity="top"
            android:layout_height="19dp"
            style="@style/Comfort"
            android:text="4.9"
            android:layout_width="23dp"
            android:id="@+id/textView23" app:layout_constraintStart_toEndOf="@+id/textView22"
            android:layout_marginStart="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView22"/>
    <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp" app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/imageView6"
            app:layout_constraintStart_toEndOf="@+id/textView23" android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@+id/textView23" android:layout_marginTop="1dp"/>
    <TextView
            android:text="Trips:"
            style="@style/Tariff"
            android:layout_width="36dp"
            android:layout_height="19dp"
            android:id="@+id/textView24"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            android:layout_marginStart="40dp"
            app:layout_constraintTop_toTopOf="@+id/imageView6"/>
    <TextView
            android:layout_height="19dp"
            style="@style/Comfort"
            android:text="2189"
            android:layout_width="37dp"
            android:id="@+id/textView25"
            app:layout_constraintStart_toEndOf="@+id/textView24"
            android:layout_marginStart="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView24"/>

</android.support.constraint.ConstraintLayout>