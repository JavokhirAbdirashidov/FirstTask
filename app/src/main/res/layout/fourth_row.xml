<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:layout_height="22dp"
            android:layout_width="104dp"
            style="@style/TripTime"
            android:text="Base fare"
            android:id="@+id/textView11" android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
            android:layout_height="22dp"
            android:layout_width="104dp"
            style="@style/TripTime"
            android:text="Ride fee"

            android:id="@+id/textView12" app:layout_constraintStart_toStartOf="@+id/textView11"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/textView11"/>
    <TextView
            android:layout_height="22dp"
            android:layout_width="104dp"
            style="@style/TripTime"
            android:text="Waiting fee"
            android:id="@+id/textView13" app:layout_constraintStart_toStartOf="@+id/textView12"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/textView12"/>
    <TextView
            android:gravity="right"
            android:layout_width="160dp"
            android:layout_height="22dp"
            style="@style/WhiteCobalt"
            android:text="7,000"
            android:id="@+id/textView14"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView11"
            app:layout_constraintStart_toEndOf="@+id/textView11" android:layout_marginStart="48dp"/>
    <TextView
            android:gravity="right"
            android:layout_width="160dp"
            android:layout_height="22dp"
            style="@style/WhiteCobalt"
            android:text="15,600"
            android:id="@+id/textView15"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView12"
            app:layout_constraintStart_toStartOf="@+id/textView14"/>
    <TextView
            android:gravity="right"
            android:layout_width="160dp"
            android:layout_height="22dp"
            style="@style/WhiteCobalt"
            android:text="1,850"
            android:id="@+id/textView16"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView13"
            app:layout_constraintStart_toStartOf="@+id/textView15"/>

    <View
            app:layout_constraintStart_toStartOf="@+id/textView13"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#C4C1C1"
    />
</android.support.constraint.ConstraintLayout>