<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:layout_height="22dp"
            android:layout_width="104dp"
            style="@style/TripTime"
            android:text="@string/trip_time"
            android:id="@+id/textView7"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"/>
    <TextView
            android:layout_height="22dp"
            android:layout_width="104dp"
            style="@style/TripTime"
            android:text="@string/distance"
            android:id="@+id/textView8" app:layout_constraintStart_toStartOf="@+id/textView7"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/textView7"/>
    <TextView
            android:gravity="right"
            android:layout_height="22dp"
            android:layout_width="160dp"
            style="@style/WhiteCobalt"
            android:text="00:35"
            android:id="@+id/textView9"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView7"
            app:layout_constraintStart_toEndOf="@+id/textView7" android:layout_marginStart="48dp"/>
    <TextView
            android:gravity="right"
            android:layout_height="22dp"
            android:layout_width="160dp"
            style="@style/WhiteCobalt"
            android:text="18,4km"
            android:id="@+id/textView10"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView8"
            app:layout_constraintStart_toEndOf="@+id/textView8" android:layout_marginStart="48dp"/>
    <View
            app:layout_constraintStart_toStartOf="@+id/textView8"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#C4C1C1"
    />
</android.support.constraint.ConstraintLayout>